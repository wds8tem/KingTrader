<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inter_sub_edit_item_view"
    android:layout_width="match_parent"
    android:layout_height="?listPreferredItemHeight"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/inter_sub_edit_item_checker"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/inter_sub_edit_title"
                android:layout_width="140dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/inter_sub_edit_item_checker" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/inter_sub_edit_cur_price"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_margin="5dp"
                    android:layout_toLeftOf="@id/inter_sub_edit_diff_ratio_shape_empty" />

                <TextView
                    android:id="@+id/inter_sub_edit_diff_ratio_shape_empty"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="5dp"
                    android:layout_toLeftOf="@id/inter_sub_edit_today_diff_price" />

                <TextView
                    android:id="@+id/inter_sub_edit_today_diff_price"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/inter_sub_edit_today_volume"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_margin="5dp"
                    android:layout_toLeftOf="@id/inter_sub_edit_diff_ratio_shape" />

                <TextView
                    android:id="@+id/inter_sub_edit_diff_ratio_shape"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="5dp"
                    android:layout_toLeftOf="@id/inter_sub_edit_today_diff_ratio" />

                <TextView
                    android:id="@+id/inter_sub_edit_today_diff_ratio"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp" />
            </RelativeLayout>
        </LinearLayout>
   </LinearLayout>

    <ImageView
        android:id="@+id/inter_sub_edit_item_move"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical|right"
        android:layout_margin="10dp"
        android:scaleType="center"
        android:src="@drawable/reorder" />
</FrameLayout>